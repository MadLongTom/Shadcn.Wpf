<Page x:Class="Shadcn.Wpf.Presentation.Pages.ListBoxDemoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Shadcn.Wpf.Controls;assembly=Shadcn.Wpf"
      Title="ListBox Demo">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            
            <!-- Page Header -->
            <StackPanel Margin="0,0,0,32">
                <controls:ShadcnTextBlock Text="ListBox" TextSize="Heading1" Margin="0,0,0,8"/>
                <controls:ShadcnTextBlock Text="Displays a list of options and allows the user to select one or more items." 
                          Variant="Secondary"/>
            </StackPanel>

            <!-- Default ListBox -->
            <StackPanel Margin="0,0,0,32">
                <controls:ShadcnCard Header="Default" 
                                   Style="{StaticResource ShadcnCardWithHeaderTemplate}">
                    <StackPanel>
                        <controls:ShadcnTextBlock Text="A simple list with selectable items" 
                                  Variant="Secondary" 
                                  Margin="0,0,0,16"/>
                        <controls:ShadcnListBox Height="200" Width="300">
                            <controls:ShadcnListBoxItem Content="Apple"/>
                            <controls:ShadcnListBoxItem Content="Banana"/>
                            <controls:ShadcnListBoxItem Content="Cherry"/>
                            <controls:ShadcnListBoxItem Content="Date"/>
                            <controls:ShadcnListBoxItem Content="Elderberry"/>
                            <controls:ShadcnListBoxItem Content="Fig"/>
                            <controls:ShadcnListBoxItem Content="Grape"/>
                            <controls:ShadcnListBoxItem Content="Honeydew"/>
                        </controls:ShadcnListBox>
                    </StackPanel>
                </controls:ShadcnCard>
            </StackPanel>

            <!-- Variants -->
            <StackPanel Margin="0,0,0,32">
                <controls:ShadcnCard Header="Variants" 
                                   Style="{StaticResource ShadcnCardWithHeaderTemplate}">
                    <StackPanel>
                        <controls:ShadcnTextBlock Text="Different visual styles for various use cases" 
                                  Variant="Secondary" 
                                  Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Default Variant -->
                            <StackPanel Grid.Column="0">
                                <controls:ShadcnTextBlock Text="Default" 
                                          TextSize="Large" 
                                          Margin="0,0,0,8"/>
                                <controls:ShadcnListBox Height="150" Variant="Default">
                                    <controls:ShadcnListBoxItem Content="Option 1"/>
                                    <controls:ShadcnListBoxItem Content="Option 2"/>
                                    <controls:ShadcnListBoxItem Content="Option 3"/>
                                    <controls:ShadcnListBoxItem Content="Option 4"/>
                                </controls:ShadcnListBox>
                            </StackPanel>
                            
                            <!-- Outline Variant -->
                            <StackPanel Grid.Column="2">
                                <controls:ShadcnTextBlock Text="Outline" 
                                          TextSize="Large" 
                                          Margin="0,0,0,8"/>
                                <controls:ShadcnListBox Height="150" Variant="Outline">
                                    <controls:ShadcnListBoxItem Content="Option 1"/>
                                    <controls:ShadcnListBoxItem Content="Option 2"/>
                                    <controls:ShadcnListBoxItem Content="Option 3"/>
                                    <controls:ShadcnListBoxItem Content="Option 4"/>
                                </controls:ShadcnListBox>
                            </StackPanel>
                            
                            <!-- Ghost Variant -->
                            <StackPanel Grid.Column="4">
                                <controls:ShadcnTextBlock Text="Ghost" 
                                          TextSize="Large" 
                                          Margin="0,0,0,8"/>
                                <controls:ShadcnListBox Height="150" Variant="Ghost">
                                    <controls:ShadcnListBoxItem Content="Option 1"/>
                                    <controls:ShadcnListBoxItem Content="Option 2"/>
                                    <controls:ShadcnListBoxItem Content="Option 3"/>
                                    <controls:ShadcnListBoxItem Content="Option 4"/>
                                </controls:ShadcnListBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </controls:ShadcnCard>
            </StackPanel>

            <!-- Sizes -->
            <StackPanel Margin="0,0,0,32">
                <controls:ShadcnCard Header="Sizes" 
                                   Style="{StaticResource ShadcnCardWithHeaderTemplate}">
                    <StackPanel>
                        <controls:ShadcnTextBlock Text="Different sizes to fit your design needs" 
                                  Variant="Secondary" 
                                  Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Small Size -->
                            <StackPanel Grid.Column="0">
                                <controls:ShadcnTextBlock Text="Small" 
                                          TextSize="Large" 
                                          Margin="0,0,0,8"/>
                                <controls:ShadcnListBox Height="120" Size="Small">
                                    <controls:ShadcnListBoxItem Content="Small Item 1"/>
                                    <controls:ShadcnListBoxItem Content="Small Item 2"/>
                                    <controls:ShadcnListBoxItem Content="Small Item 3"/>
                                </controls:ShadcnListBox>
                            </StackPanel>
                            
                            <!-- Default Size -->
                            <StackPanel Grid.Column="2">
                                <controls:ShadcnTextBlock Text="Default" 
                                          TextSize="Large" 
                                          Margin="0,0,0,8"/>
                                <controls:ShadcnListBox Height="120" Size="Default">
                                    <controls:ShadcnListBoxItem Content="Default Item 1"/>
                                    <controls:ShadcnListBoxItem Content="Default Item 2"/>
                                    <controls:ShadcnListBoxItem Content="Default Item 3"/>
                                </controls:ShadcnListBox>
                            </StackPanel>
                            
                            <!-- Large Size -->
                            <StackPanel Grid.Column="4">
                                <controls:ShadcnTextBlock Text="Large" 
                                          TextSize="Large" 
                                          Margin="0,0,0,8"/>
                                <controls:ShadcnListBox Height="120" Size="Large">
                                    <controls:ShadcnListBoxItem Content="Large Item 1"/>
                                    <controls:ShadcnListBoxItem Content="Large Item 2"/>
                                    <controls:ShadcnListBoxItem Content="Large Item 3"/>
                                </controls:ShadcnListBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </controls:ShadcnCard>
            </StackPanel>

            <!-- Multiple Selection -->
            <StackPanel Margin="0,0,0,32">
                <controls:ShadcnCard Header="Multiple Selection" 
                                   Style="{StaticResource ShadcnCardWithHeaderTemplate}">
                    <StackPanel>
                        <controls:ShadcnTextBlock Text="Enable multiple item selection using SelectionMode" 
                                  Variant="Secondary" 
                                  Margin="0,0,0,16"/>
                        <controls:ShadcnListBox Height="200" Width="300" SelectionMode="Multiple">
                            <controls:ShadcnListBoxItem Content="Task 1 - Planning"/>
                            <controls:ShadcnListBoxItem Content="Task 2 - Design"/>
                            <controls:ShadcnListBoxItem Content="Task 3 - Development"/>
                            <controls:ShadcnListBoxItem Content="Task 4 - Testing"/>
                            <controls:ShadcnListBoxItem Content="Task 5 - Deployment"/>
                            <controls:ShadcnListBoxItem Content="Task 6 - Maintenance"/>
                        </controls:ShadcnListBox>
                        <controls:ShadcnTextBlock Text="Hold Ctrl to select multiple items" 
                                  Variant="Secondary" 
                                  TextSize="Small"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </controls:ShadcnCard>
            </StackPanel>

            <!-- Disabled State -->
            <StackPanel Margin="0,0,0,32">
                <controls:ShadcnCard Header="Disabled State" 
                                   Style="{StaticResource ShadcnCardWithHeaderTemplate}">
                    <StackPanel>
                        <controls:ShadcnTextBlock Text="ListBox in disabled state" 
                                  Variant="Secondary" 
                                  Margin="0,0,0,16"/>
                        <controls:ShadcnListBox Height="150" Width="300" IsEnabled="False">
                            <controls:ShadcnListBoxItem Content="Disabled Item 1"/>
                            <controls:ShadcnListBoxItem Content="Disabled Item 2"/>
                            <controls:ShadcnListBoxItem Content="Disabled Item 3"/>
                            <controls:ShadcnListBoxItem Content="Disabled Item 4"/>
                        </controls:ShadcnListBox>
                    </StackPanel>
                </controls:ShadcnCard>
            </StackPanel>

            <!-- With Icons -->
            <StackPanel Margin="0,0,0,32">
                <controls:ShadcnCard Header="With Icons" 
                                   Style="{StaticResource ShadcnCardWithHeaderTemplate}">
                    <StackPanel>
                        <controls:ShadcnTextBlock Text="ListBox items with custom content including icons" 
                                  Variant="Secondary" 
                                  Margin="0,0,0,16"/>
                        <controls:ShadcnListBox Height="200" Width="350">
                            <controls:ShadcnListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="{DynamicResource PrimaryBrush}" Margin="0,0,8,0"/>
                                    <controls:ShadcnTextBlock Text="Home"/>
                                </StackPanel>
                            </controls:ShadcnListBoxItem>
                            <controls:ShadcnListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" Margin="0,0,8,0"/>
                                    <controls:ShadcnTextBlock Text="Profile"/>
                                </StackPanel>
                            </controls:ShadcnListBoxItem>
                            <controls:ShadcnListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="{DynamicResource SecondaryBrush}" Margin="0,0,8,0"/>
                                    <controls:ShadcnTextBlock Text="Settings"/>
                                </StackPanel>
                            </controls:ShadcnListBoxItem>
                            <controls:ShadcnListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="{DynamicResource DestructiveBrush}" Margin="0,0,8,0"/>
                                    <controls:ShadcnTextBlock Text="Logout"/>
                                </StackPanel>
                            </controls:ShadcnListBoxItem>
                        </controls:ShadcnListBox>
                    </StackPanel>
                </controls:ShadcnCard>
            </StackPanel>

            <!-- Complex Item Templates -->
            <StackPanel Margin="0,0,0,32">
                <controls:ShadcnCard Header="Complex Item Templates" 
                                   Style="{StaticResource ShadcnCardWithHeaderTemplate}">
                    <StackPanel>
                        <controls:ShadcnTextBlock Text="ListBox with rich, complex item templates including multiple data fields" 
                                  Variant="Secondary" 
                                  Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- User List -->
                            <StackPanel Grid.Column="0">
                                <controls:ShadcnTextBlock Text="User Directory" 
                                          TextSize="Large" 
                                          Margin="0,0,0,8"/>
                                <controls:ShadcnListBox Height="250" Width="280">
                                    <controls:ShadcnListBoxItem>
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Avatar -->
                                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16" 
                                                    Background="{DynamicResource PrimaryBrush}" 
                                                    VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="JS" 
                                                          Foreground="{DynamicResource PrimaryForegroundBrush}"
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          TextSize="Small"/>
                                            </Border>
                                            <!-- Info -->
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="John Smith" FontWeight="Medium"/>
                                                <controls:ShadcnTextBlock Text="john.smith@company.com" 
                                                          Variant="Secondary" 
                                                          TextSize="Small"/>
                                            </StackPanel>
                                            <!-- Status -->
                                            <Border Grid.Column="2" Background="{DynamicResource SuccessBrush}" 
                                                    CornerRadius="8" Padding="6,2" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="Online" 
                                                          Foreground="{DynamicResource SuccessForegroundBrush}"
                                                          TextSize="ExtraSmall"/>
                                            </Border>
                                        </Grid>
                                    </controls:ShadcnListBoxItem>
                                    
                                    <controls:ShadcnListBoxItem>
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16" 
                                                    Background="{DynamicResource AccentBrush}" 
                                                    VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="AD" 
                                                          Foreground="{DynamicResource AccentForegroundBrush}"
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          TextSize="Small"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="Alice Davis" FontWeight="Medium"/>
                                                <controls:ShadcnTextBlock Text="alice.davis@company.com" 
                                                          Variant="Secondary" 
                                                          TextSize="Small"/>
                                            </StackPanel>
                                            <Border Grid.Column="2" Background="{DynamicResource WarningBrush}" 
                                                    CornerRadius="8" Padding="6,2" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="Away" 
                                                          Foreground="{DynamicResource WarningForegroundBrush}"
                                                          TextSize="ExtraSmall"/>
                                            </Border>
                                        </Grid>
                                    </controls:ShadcnListBoxItem>
                                    
                                    <controls:ShadcnListBoxItem>
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16" 
                                                    Background="{DynamicResource SecondaryBrush}" 
                                                    VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="BW" 
                                                          Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          TextSize="Small"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="Bob Wilson" FontWeight="Medium"/>
                                                <controls:ShadcnTextBlock Text="bob.wilson@company.com" 
                                                          Variant="Secondary" 
                                                          TextSize="Small"/>
                                            </StackPanel>
                                            <Border Grid.Column="2" Background="{DynamicResource MutedBrush}" 
                                                    CornerRadius="8" Padding="6,2" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="Offline" 
                                                          Foreground="{DynamicResource MutedForegroundBrush}"
                                                          TextSize="ExtraSmall"/>
                                            </Border>
                                        </Grid>
                                    </controls:ShadcnListBoxItem>
                                </controls:ShadcnListBox>
                            </StackPanel>
                            
                            <!-- File List -->
                            <StackPanel Grid.Column="2">
                                <controls:ShadcnTextBlock Text="Recent Files" 
                                          TextSize="Large" 
                                          Margin="0,0,0,8"/>
                                <controls:ShadcnListBox Height="250" Width="280">
                                    <controls:ShadcnListBoxItem>
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- File Icon -->
                                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="4" 
                                                    Background="{DynamicResource PrimaryBrush}" 
                                                    VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="ðŸ“„" 
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          TextSize="Default"/>
                                            </Border>
                                            <!-- File Info -->
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="Project Proposal.docx" FontWeight="Medium"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <controls:ShadcnTextBlock Text="2.4 MB â€¢ " 
                                                              Variant="Secondary" 
                                                              TextSize="Small"/>
                                                    <controls:ShadcnTextBlock Text="Modified 2 hours ago" 
                                                              Variant="Secondary" 
                                                              TextSize="Small"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <!-- Menu -->
                                            <controls:ShadcnButton Grid.Column="2" 
                                                                 Content="â‹¯" 
                                                                 Variant="Ghost" 
                                                                 Size="Small"
                                                                 VerticalAlignment="Center"/>
                                        </Grid>
                                    </controls:ShadcnListBoxItem>
                                    
                                    <controls:ShadcnListBoxItem>
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="4" 
                                                    Background="{DynamicResource SuccessBrush}" 
                                                    VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="ðŸ“Š" 
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          TextSize="Default"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="Sales Report Q4.xlsx" FontWeight="Medium"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <controls:ShadcnTextBlock Text="1.8 MB â€¢ " 
                                                              Variant="Secondary" 
                                                              TextSize="Small"/>
                                                    <controls:ShadcnTextBlock Text="Modified yesterday" 
                                                              Variant="Secondary" 
                                                              TextSize="Small"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <controls:ShadcnButton Grid.Column="2" 
                                                                 Content="â‹¯" 
                                                                 Variant="Ghost" 
                                                                 Size="Small"
                                                                 VerticalAlignment="Center"/>
                                        </Grid>
                                    </controls:ShadcnListBoxItem>
                                    
                                    <controls:ShadcnListBoxItem>
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="4" 
                                                    Background="{DynamicResource AccentBrush}" 
                                                    VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="ðŸ–¼ï¸" 
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          TextSize="Default"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                                                <controls:ShadcnTextBlock Text="Design Mockups.png" FontWeight="Medium"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <controls:ShadcnTextBlock Text="5.2 MB â€¢ " 
                                                              Variant="Secondary" 
                                                              TextSize="Small"/>
                                                    <controls:ShadcnTextBlock Text="Modified 3 days ago" 
                                                              Variant="Secondary" 
                                                              TextSize="Small"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <controls:ShadcnButton Grid.Column="2" 
                                                                 Content="â‹¯" 
                                                                 Variant="Ghost" 
                                                                 Size="Small"
                                                                 VerticalAlignment="Center"/>
                                        </Grid>
                                    </controls:ShadcnListBoxItem>
                                </controls:ShadcnListBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </controls:ShadcnCard>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
