<Page x:Class="Shadcn.Wpf.Presentation.Pages.DatePickerDemoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Shadcn.Wpf.Controls;assembly=Shadcn.Wpf"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24">
            <!-- Header -->
            <controls:ShadcnTextBlock 
                Text="DatePicker" 
                TextSize="Heading1" 
                Margin="0,0,0,8"/>
            
            <controls:ShadcnTextBlock 
                Text="A date picker component with a text input and a calendar popup." 
                Foreground="{DynamicResource MutedForegroundBrush}"
                Margin="0,0,0,32"/>

            <!-- Basic Example -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="Basic DatePicker" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <controls:ShadcnDatePicker 
                        Label="Select a date"
                        Placeholder="Pick a date"
                        HelperText="Choose any date from the calendar"
                        Width="250"
                        HorizontalAlignment="Left"/>
                </StackPanel>
            </controls:ShadcnCard>

            <!-- Variants -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="Variants" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Default -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,16,16">
                            <controls:ShadcnTextBlock Text="Default" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Variant="Default"
                                Placeholder="Default variant"/>
                        </StackPanel>

                        <!-- Outline -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,16,16">
                            <controls:ShadcnTextBlock Text="Outline" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Variant="Outline"
                                Placeholder="Outline variant"/>
                        </StackPanel>

                        <!-- Ghost -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,16">
                            <controls:ShadcnTextBlock Text="Ghost" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Variant="Ghost"
                                Placeholder="Ghost variant"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:ShadcnCard>

            <!-- Sizes -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="Sizes" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Small -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,16,16">
                            <controls:ShadcnTextBlock Text="Small" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Size="Small"
                                Placeholder="Small size"/>
                        </StackPanel>

                        <!-- Medium -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,16,16">
                            <controls:ShadcnTextBlock Text="Medium" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Size="Medium"
                                Placeholder="Medium size"/>
                        </StackPanel>

                        <!-- Large -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,16">
                            <controls:ShadcnTextBlock Text="Large" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Size="Large"
                                Placeholder="Large size"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:ShadcnCard>

            <!-- With Labels and Helper Text -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="With Labels and Helper Text" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- With Label and Helper -->
                        <StackPanel Grid.Column="0">
                            <controls:ShadcnDatePicker 
                                Label="Birth Date"
                                Placeholder="Select your birth date"
                                HelperText="This date will be used for age verification"/>
                        </StackPanel>

                        <!-- With Error -->
                        <StackPanel Grid.Column="2">
                            <controls:ShadcnDatePicker 
                                Label="Event Date"
                                Placeholder="Select event date"
                                HasError="True"
                                ErrorMessage="Event date cannot be in the past"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:ShadcnCard>

            <!-- States -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="States" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Normal -->
                        <StackPanel Grid.Column="0">
                            <controls:ShadcnTextBlock Text="Normal" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Placeholder="Normal state"/>
                        </StackPanel>

                        <!-- Disabled -->
                        <StackPanel Grid.Column="2">
                            <controls:ShadcnTextBlock Text="Disabled" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Placeholder="Disabled state"
                                IsEnabled="False"/>
                        </StackPanel>

                        <!-- With Selected Date -->
                        <StackPanel Grid.Column="4">
                            <controls:ShadcnTextBlock Text="Selected" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                Placeholder="Select a date"
                                SelectedDate="{x:Static System:DateTime.Today}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:ShadcnCard>

            <!-- Custom Options -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="Custom Options" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Without Icon -->
                        <StackPanel Grid.Column="0">
                            <controls:ShadcnTextBlock Text="No Icon" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                ShowIcon="False"
                                Placeholder="Without calendar icon"/>
                        </StackPanel>

                        <!-- Not Clearable -->
                        <StackPanel Grid.Column="2">
                            <controls:ShadcnTextBlock Text="Not Clearable" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                IsClearable="False"
                                Placeholder="Cannot be cleared"
                                SelectedDate="{x:Static System:DateTime.Today}"/>
                        </StackPanel>

                        <!-- With Week Numbers -->
                        <StackPanel Grid.Column="4">
                            <controls:ShadcnTextBlock Text="Week Numbers" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                ShowWeekNumbers="True"
                                Placeholder="Shows week numbers"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:ShadcnCard>

            <!-- Text Input Options -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="Text Input Options" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <controls:ShadcnTextBlock 
                        Text="You can enable or disable text input in the DatePicker. When enabled, users can type dates directly." 
                        Foreground="{DynamicResource MutedForegroundBrush}"
                        Margin="0,0,0,16"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Text Input Enabled -->
                        <StackPanel Grid.Column="0">
                            <controls:ShadcnTextBlock Text="Text Input Enabled" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                IsTextInputEnabled="True"
                                Placeholder="Type: yyyy-mm-dd"
                                HelperText="You can type dates directly"/>
                        </StackPanel>

                        <!-- Text Input Disabled -->
                        <StackPanel Grid.Column="2">
                            <controls:ShadcnTextBlock Text="Text Input Disabled" FontWeight="{StaticResource FontWeightMedium}" Margin="0,0,0,8"/>
                            <controls:ShadcnDatePicker 
                                IsTextInputEnabled="False"
                                Placeholder="Click calendar button only"
                                HelperText="Calendar button only"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:ShadcnCard>

            <!-- Form Example -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="Form Example" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <Grid MaxWidth="400" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <controls:ShadcnDatePicker 
                            Grid.Row="0"
                            Label="Start Date"
                            Placeholder="Select start date"
                            HelperText="The project start date"
                            SelectedDate="{Binding StartDate, Mode=TwoWay}"
                            Margin="0,0,0,16"/>

                        <controls:ShadcnDatePicker 
                            Grid.Row="1"
                            Label="End Date"
                            Placeholder="Select end date"
                            HelperText="The project end date"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}"
                            Margin="0,0,0,16"/>

                        <controls:ShadcnDatePicker 
                            Grid.Row="2"
                            Label="Review Date"
                            Placeholder="Select review date"
                            HelperText="Optional review milestone"
                            SelectedDate="{Binding ReviewDate, Mode=TwoWay}"
                            Margin="0,0,0,16"/>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,16,0,0">
                            <controls:ShadcnButton 
                                Content="Submit" 
                                Variant="Default"
                                Command="{Binding SubmitCommand}"
                                Margin="0,0,12,0"/>
                            <controls:ShadcnButton 
                                Content="Cancel" 
                                Variant="Outline"
                                Command="{Binding CancelCommand}"
                                Margin="0,0,12,0"/>
                            <controls:ShadcnButton 
                                Content="Validate" 
                                Variant="Secondary"
                                Command="{Binding ValidateDateRangeCommand}"
                                Margin="0,0,12,0"/>
                            <controls:ShadcnButton 
                                Content="Reset" 
                                Variant="Ghost"
                                Command="{Binding ResetToDefaultsCommand}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </controls:ShadcnCard>

            <!-- Command Examples -->
            <controls:ShadcnCard Margin="0,0,0,24">
                <StackPanel>
                    <controls:ShadcnTextBlock 
                        Text="Command Examples (MVVM)" 
                        TextSize="Heading3" 
                        Margin="0,0,0,16"/>
                    
                    <Grid MaxWidth="600" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Interactive DatePicker -->
                        <controls:ShadcnDatePicker 
                            Grid.Row="0" Grid.Column="0"
                            Label="Interactive Date"
                            Placeholder="Select any date"
                            HelperText="Try the commands on the right"
                            SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                            HasError="{Binding HasError}"
                            ErrorMessage="{Binding ErrorMessage}"
                            Margin="0,0,12,16"/>

                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,16">
                            <controls:ShadcnButton 
                                Content="Set Today" 
                                Variant="Outline"
                                Size="Small"
                                Command="{Binding SetTodayCommand}"
                                CommandParameter="selected"
                                Margin="0,0,0,4"/>
                            <controls:ShadcnButton 
                                Content="Clear" 
                                Variant="Ghost"
                                Size="Small"
                                Command="{Binding ClearDateCommand}"
                                CommandParameter="selected"
                                Margin="0,0,0,4"/>
                            <controls:ShadcnButton 
                                Content="Features" 
                                Variant="Secondary"
                                Size="Small"
                                Command="{Binding ShowFeaturesCommand}"/>
                        </StackPanel>

                        <!-- Status Display -->
                        <controls:ShadcnCard Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <controls:ShadcnTextBlock 
                                    Text="Selected Date Information" 
                                    FontWeight="{StaticResource FontWeightMedium}" 
                                    Margin="0,0,0,8"/>
                                <controls:ShadcnTextBlock>
                                    <controls:ShadcnTextBlock.Text>
                                        <MultiBinding StringFormat="Selected: {0:yyyy-MM-dd dddd}">
                                            <Binding Path="SelectedDate" TargetNullValue="None selected"/>
                                        </MultiBinding>
                                    </controls:ShadcnTextBlock.Text>
                                </controls:ShadcnTextBlock>
                                <controls:ShadcnTextBlock 
                                    Text="{Binding ErrorMessage}" 
                                    Variant="Destructive"
                                    Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </controls:ShadcnCard>
                    </Grid>
                </StackPanel>
            </controls:ShadcnCard>
        </StackPanel>
    </ScrollViewer>
</Page>
