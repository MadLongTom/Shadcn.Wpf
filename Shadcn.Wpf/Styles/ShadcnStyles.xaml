<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Shadcn.Wpf.Converters">
    
    <!-- Global Converters -->
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    
    <!-- Merge all style dictionaries - AFTER basic resources -->
    <ResourceDictionary.MergedDictionaries>
        <!-- Base Styles - Colors, Layout and Typography FIRST -->
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Layout.xaml"/>
        <ResourceDictionary Source="Typography.xaml"/>
        
        <!-- Component Styles - AFTER base resources -->
        <ResourceDictionary Source="ButtonStyles.xaml"/>
        <ResourceDictionary Source="CardStyles.xaml"/>
        <ResourceDictionary Source="TextBoxStyles.xaml"/>
        <ResourceDictionary Source="TextBlockStyles.xaml"/>
        <ResourceDictionary Source="CheckBoxStyles.xaml"/>
        <ResourceDictionary Source="RadioButtonStyles.xaml"/>
        <ResourceDictionary Source="SelectStyles.xaml"/>
        <ResourceDictionary Source="PasswordBoxStyles.xaml"/>
        <ResourceDictionary Source="ComboBoxStyles.xaml"/>
        <ResourceDictionary Source="ProgressBarStyles.xaml"/>
        <ResourceDictionary Source="NavMenuStyles.xaml"/>
        <ResourceDictionary Source="TabControlStyles.xaml"/>
        <ResourceDictionary Source="ListBoxStyles.xaml"/>
        <ResourceDictionary Source="DatePickerStyles.xaml"/>
        <ResourceDictionary Source="ToggleSwitchStyles.xaml"/>
        <ResourceDictionary Source="WindowStyles.xaml"/>
        <ResourceDictionary Source="PageTransitions.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
</ResourceDictionary>
