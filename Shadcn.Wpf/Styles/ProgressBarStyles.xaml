<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Shadcn.Wpf.Controls"
                    xmlns:converters="clr-namespace:Shadcn.Wpf.Converters">

    <!-- ShadcnProgressBar Default Style -->
    <Style TargetType="{x:Type controls:ShadcnProgressBar}">
        <Setter Property="Background" Value="{DynamicResource MutedBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Value" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ShadcnProgressBar}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Label and Percentage -->
                        <Grid Grid.Row="0" 
                              Margin="0,0,0,4"
                              Visibility="{Binding Label, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static converters:CommonConverters.NullToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <controls:ShadcnTextBlock Grid.Column="0"
                                                    Text="{TemplateBinding Label}"
                                                    TextSize="Small"
                                                    IsEmphasized="True"/>
                            
                            <controls:ShadcnTextBlock Grid.Column="1"
                                                    Text="{Binding Percentage, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:F0}%}"
                                                    TextSize="Small"
                                                    Variant="Secondary"
                                                    Visibility="{Binding ShowPercentage, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static converters:CommonConverters.BooleanToVisibilityConverter}}"/>
                        </Grid>
                        
                        <!-- Progress Track -->
                        <Border Grid.Row="1"
                                x:Name="PART_Track"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Height="8">
                            
                            <!-- Progress Indicator -->
                            <Border x:Name="PART_Indicator"
                                    HorizontalAlignment="Left"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    Background="{DynamicResource PrimaryBrush}">
                                <Border.Width>
                                    <MultiBinding Converter="{x:Static converters:CommonConverters.ProgressWidthConverter}">
                                        <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}"/>
                                        <Binding Path="Minimum" RelativeSource="{RelativeSource TemplatedParent}"/>
                                        <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}"/>
                                        <Binding Path="ActualWidth" ElementName="PART_Track"/>
                                    </MultiBinding>
                                </Border.Width>
                            </Border>
                        </Border>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- Size Triggers -->
                        <Trigger Property="Size" Value="Small">
                            <Setter TargetName="PART_Track" Property="Height" Value="4"/>
                            <Setter Property="CornerRadius" Value="2"/>
                        </Trigger>
                        <Trigger Property="Size" Value="Large">
                            <Setter TargetName="PART_Track" Property="Height" Value="12"/>
                            <Setter Property="CornerRadius" Value="6"/>
                        </Trigger>
                        
                        <!-- Variant Triggers -->
                        <Trigger Property="Variant" Value="Default">
                            <Setter TargetName="PART_Indicator" Property="Background" Value="{DynamicResource ForegroundBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Primary">
                            <Setter TargetName="PART_Indicator" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Secondary">
                            <Setter TargetName="PART_Indicator" Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Success">
                            <Setter TargetName="PART_Indicator" Property="Background" Value="{DynamicResource SuccessBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Warning">
                            <Setter TargetName="PART_Indicator" Property="Background" Value="{DynamicResource WarningBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Destructive">
                            <Setter TargetName="PART_Indicator" Property="Background" Value="{DynamicResource DestructiveBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Accent">
                            <Setter TargetName="PART_Indicator" Property="Background" Value="{DynamicResource AccentBrush}"/>
                        </Trigger>
                        
                        <!-- Indeterminate State -->
                        <Trigger Property="IsIndeterminate" Value="True">
                            <Setter TargetName="PART_Indicator" Property="Width" Value="30"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="PART_Indicator"
                                                       Storyboard.TargetProperty="(Canvas.Left)"
                                                       From="-30"
                                                       To="100"
                                                       Duration="0:0:1.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                        
                        <!-- IsEnabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Circular Progress Bar Style -->
    <Style x:Key="ShadcnCircularProgressBar" TargetType="{x:Type controls:ShadcnProgressBar}">
        <Setter Property="Width" Value="64"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="Background" Value="{DynamicResource MutedBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ShadcnProgressBar}">
                    <Grid>
                        <Ellipse x:Name="PART_Track"
                                Stroke="{TemplateBinding Background}"
                                StrokeThickness="4"
                                Fill="Transparent"/>
                        
                        <Path x:Name="PART_Indicator"
                              Stroke="{DynamicResource PrimaryBrush}"
                              StrokeThickness="4"
                              Fill="Transparent">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure x:Name="PART_Arc" StartPoint="32,4">
                                        <ArcSegment x:Name="PART_ArcSegment"
                                                  Size="28,28"
                                                  SweepDirection="Clockwise"
                                                  IsLargeArc="False"
                                                  Point="32,4"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <!-- Center content -->
                        <Grid>
                            <controls:ShadcnTextBlock x:Name="PART_PercentageText"
                                                    Text="{Binding Percentage, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:F0}%}"
                                                    TextSize="Small"
                                                    IsEmphasized="True"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding ShowPercentage, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static converters:CommonConverters.BooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- Size Triggers for Circular -->
                        <Trigger Property="Size" Value="Small">
                            <Setter Property="Width" Value="48"/>
                            <Setter Property="Height" Value="48"/>
                            <Setter TargetName="PART_Track" Property="StrokeThickness" Value="3"/>
                            <Setter TargetName="PART_Indicator" Property="StrokeThickness" Value="3"/>
                        </Trigger>
                        <Trigger Property="Size" Value="Large">
                            <Setter Property="Width" Value="96"/>
                            <Setter Property="Height" Value="96"/>
                            <Setter TargetName="PART_Track" Property="StrokeThickness" Value="6"/>
                            <Setter TargetName="PART_Indicator" Property="StrokeThickness" Value="6"/>
                        </Trigger>
                        
                        <!-- Variant Triggers for Circular -->
                        <Trigger Property="Variant" Value="Default">
                            <Setter TargetName="PART_Indicator" Property="Stroke" Value="{DynamicResource ForegroundBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Primary">
                            <Setter TargetName="PART_Indicator" Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Secondary">
                            <Setter TargetName="PART_Indicator" Property="Stroke" Value="{DynamicResource SecondaryBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Success">
                            <Setter TargetName="PART_Indicator" Property="Stroke" Value="{DynamicResource SuccessBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Warning">
                            <Setter TargetName="PART_Indicator" Property="Stroke" Value="{DynamicResource WarningBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Destructive">
                            <Setter TargetName="PART_Indicator" Property="Stroke" Value="{DynamicResource DestructiveBrush}"/>
                        </Trigger>
                        <Trigger Property="Variant" Value="Accent">
                            <Setter TargetName="PART_Indicator" Property="Stroke" Value="{DynamicResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
