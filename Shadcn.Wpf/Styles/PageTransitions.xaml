<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Page Fade In Animation -->
    <Storyboard x:Key="PageFadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                          From="20,0,-20,0" To="0,0,0,0"
                          Duration="0:0:0.3">
            <ThicknessAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </ThicknessAnimation.EasingFunction>
        </ThicknessAnimation>
    </Storyboard>

    <!-- Page Fade Out Animation -->
    <Storyboard x:Key="PageFadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1" To="0"
                        Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseIn"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                          From="0,0,0,0" To="-20,0,20,0"
                          Duration="0:0:0.2">
            <ThicknessAnimation.EasingFunction>
                <CubicEase EasingMode="EaseIn"/>
            </ThicknessAnimation.EasingFunction>
        </ThicknessAnimation>
    </Storyboard>

    <!-- Page Slide In From Right Animation -->
    <Storyboard x:Key="PageSlideInFromRightAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:0.4">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                          From="40,0,-40,0" To="0,0,0,0"
                          Duration="0:0:0.4">
            <ThicknessAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </ThicknessAnimation.EasingFunction>
        </ThicknessAnimation>
    </Storyboard>

    <!-- Page Slide In From Left Animation -->
    <Storyboard x:Key="PageSlideInFromLeftAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:0.4">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                          From="-40,0,40,0" To="0,0,0,0"
                          Duration="0:0:0.4">
            <ThicknessAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </ThicknessAnimation.EasingFunction>
        </ThicknessAnimation>
    </Storyboard>

    <!-- Frame Style with Transition Support -->
    <Style x:Key="AnimatedFrameStyle" TargetType="Frame">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="NavigationUIVisibility" Value="Hidden"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Frame.Loaded">
                <BeginStoryboard Storyboard="{StaticResource PageFadeInAnimation}"/>
            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
