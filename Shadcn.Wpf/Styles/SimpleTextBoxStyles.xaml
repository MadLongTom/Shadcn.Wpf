<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Shadcn.Wpf.Controls">

    <!-- Simple TextBox Template -->
    <ControlTemplate x:Key="SimpleTextBoxTemplate" TargetType="{x:Type controls:ShadcnTextBox}">
        <Border x:Name="PART_Border"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="6"
                Padding="{TemplateBinding Padding}">
            
            <Grid>
                <!-- Placeholder Text -->
                <TextBlock x:Name="PART_Placeholder"
                          Text="{TemplateBinding Placeholder}"
                          Foreground="#64748B"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False"
                          Visibility="Collapsed"/>
                
                <!-- Actual TextBox -->
                <ScrollViewer x:Name="PART_ContentHost"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <ControlTemplate.Triggers>
            <!-- Show placeholder when empty -->
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Text" Value=""/>
                    <Condition Property="IsKeyboardFocused" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="PART_Placeholder" Property="Visibility" Value="Visible"/>
            </MultiTrigger>
            
            <!-- Focus state -->
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter TargetName="PART_Border" Property="BorderBrush" Value="#3B82F6"/>
                <Setter TargetName="PART_Border" Property="BorderThickness" Value="2"/>
            </Trigger>
            
            <!-- Disabled state -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="PART_Border" Property="Opacity" Value="0.5"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Simple TextBox Style -->
    <Style TargetType="{x:Type controls:ShadcnTextBox}">
        <Setter Property="Template" Value="{StaticResource SimpleTextBoxTemplate}"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="#020817"/>
        <Setter Property="BorderBrush" Value="#E2E8F0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontFamily" Value="{DynamicResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
