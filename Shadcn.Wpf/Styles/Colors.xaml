<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Shadcn Color Palette -->
    
    <!-- Light Theme Colors -->
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="ForegroundColor">#020817</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    <Color x:Key="CardForegroundColor">#020817</Color>
    <Color x:Key="PopoverColor">#FFFFFF</Color>
    <Color x:Key="PopoverForegroundColor">#020817</Color>
    
    <Color x:Key="PrimaryColor">#0F172A</Color>
    <Color x:Key="PrimaryForegroundColor">#F8FAFC</Color>
    
    <Color x:Key="SecondaryColor">#F1F5F9</Color>
    <Color x:Key="SecondaryForegroundColor">#0F172A</Color>
    
    <Color x:Key="MutedColor">#F1F5F9</Color>
    <Color x:Key="MutedForegroundColor">#64748B</Color>
    
    <Color x:Key="AccentColor">#F1F5F9</Color>
    <Color x:Key="AccentForegroundColor">#0F172A</Color>
    
    <Color x:Key="DestructiveColor">#EF4444</Color>
    <Color x:Key="DestructiveForegroundColor">#F8FAFC</Color>
    
    <Color x:Key="SuccessColor">#22C55E</Color>
    <Color x:Key="SuccessForegroundColor">#F8FAFC</Color>
    
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="WarningForegroundColor">#FFFFFF</Color>
    
    <Color x:Key="BorderColor">#E2E8F0</Color>
    <Color x:Key="InputColor">#E2E8F0</Color>
    <Color x:Key="RingColor">#3B82F6</Color>
    
    <!-- Convert to Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="CardForegroundBrush" Color="{StaticResource CardForegroundColor}"/>
    <SolidColorBrush x:Key="PopoverBrush" Color="{StaticResource PopoverColor}"/>
    <SolidColorBrush x:Key="PopoverForegroundBrush" Color="{StaticResource PopoverForegroundColor}"/>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryForegroundColor}"/>
    
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}"/>
    
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}"/>
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="{StaticResource MutedForegroundColor}"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="{StaticResource AccentForegroundColor}"/>
    
    <SolidColorBrush x:Key="DestructiveBrush" Color="{StaticResource DestructiveColor}"/>
    <SolidColorBrush x:Key="DestructiveForegroundBrush" Color="{StaticResource DestructiveForegroundColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessForegroundBrush" Color="{StaticResource SuccessForegroundColor}"/>
    
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="{StaticResource WarningForegroundColor}"/>
    
    <!-- Renamed to avoid clash with DependencyProperty name -->
    <SolidColorBrush x:Key="AppBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="InputBrush" Color="{StaticResource InputColor}"/>
    <SolidColorBrush x:Key="RingBrush" Color="{StaticResource RingColor}"/>
    
    <!-- Select Component Colors -->
    <SolidColorBrush x:Key="SelectBackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SelectForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="SelectBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="SelectFocusBorderBrush" Color="{StaticResource RingColor}"/>
    <SolidColorBrush x:Key="SelectHoverBorderBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="SelectPlaceholderBrush" Color="{StaticResource MutedForegroundColor}"/>
    <SolidColorBrush x:Key="SelectItemHoverBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SelectItemSelectedBrush" Color="#EFF6FF"/>
    
</ResourceDictionary>
