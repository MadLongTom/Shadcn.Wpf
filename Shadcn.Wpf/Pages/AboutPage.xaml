<Page x:Class="Shadcn.Wpf.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Shadcn.Wpf.Controls"
      Title="About">

    <Page.Resources>
        <Style x:Key="HeadingStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="SubHeadingStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="LineHeight" Value="24"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
        <StackPanel MaxWidth="800">
            <!-- Header -->
            <controls:ShadcnTextBlock Text="About Shadcn.Wpf" TextSize="Heading1" Margin="0,0,0,16"/>
            <controls:ShadcnTextBlock Text="A modern, beautiful component library for WPF applications" Variant="Secondary" Margin="0,0,0,32"/>
            
            <!-- Project Info -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <controls:ShadcnTextBlock Text="ðŸ“¦ Project Information" TextSize="Heading3" Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <controls:ShadcnTextBlock Grid.Row="0" Grid.Column="0" Text="Version:" TextSize="Large"/>
                        <controls:ShadcnTextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Version}" Margin="0,0,0,8"/>
                        
                        <controls:ShadcnTextBlock Grid.Row="1" Grid.Column="0" Text="Framework:" TextSize="Large"/>
                        <controls:ShadcnTextBlock Grid.Row="1" Grid.Column="1" Text=".NET 9.0" Margin="0,0,0,8"/>
                        
                        <controls:ShadcnTextBlock Grid.Row="2" Grid.Column="0" Text="Platform:" TextSize="Large"/>
                        <controls:ShadcnTextBlock Grid.Row="2" Grid.Column="1" Text="WPF (Windows Presentation Foundation)" Margin="0,0,0,8"/>
                        
                        <controls:ShadcnTextBlock Grid.Row="3" Grid.Column="0" Text="License:" TextSize="Large"/>
                        <controls:ShadcnTextBlock Grid.Row="3" Grid.Column="1" Text="MIT License" Margin="0,0,0,8"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Description -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <controls:ShadcnTextBlock Text="ðŸŽ¨ What is Shadcn.Wpf?" TextSize="Heading3" Margin="0,0,0,12"/>
                    <controls:ShadcnTextBlock Text="{Binding Description}" Margin="0,0,0,8" TextWrapping="Wrap"/>
                    <controls:ShadcnTextBlock Margin="0,8,0,0" TextWrapping="Wrap"
                                              Text="The library focuses on developer experience, performance, and visual consistency, making it easy to build professional-looking WPF applications with minimal effort."/>
                </StackPanel>
            </Border>
            
            <!-- Components -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <controls:ShadcnTextBlock Text="ðŸ§© Available Components" TextSize="Heading3" Margin="0,0,0,12"/>
                    <UniformGrid Columns="2">
                        <StackPanel Margin="0,0,16,0">
                            <controls:ShadcnTextBlock Text="â€¢ ShadcnButton" Margin="0,0,0,4"/>
                            <controls:ShadcnTextBlock Text="â€¢ ShadcnCard" Margin="0,0,0,4"/>
                            <controls:ShadcnTextBlock Text="â€¢ ShadcnTextBox" Margin="0,0,0,4"/>
                            <controls:ShadcnTextBlock Text="â€¢ ShadcnSelect" Margin="0,0,0,4"/>
                        </StackPanel>
                        <StackPanel>
                            <controls:ShadcnTextBlock Text="â€¢ ShadcnNavMenu" Margin="0,0,0,4"/>
                            <controls:ShadcnTextBlock Text="â€¢ Theme System" Margin="0,0,0,4"/>
                            <controls:ShadcnTextBlock Text="â€¢ Converters" Margin="0,0,0,4"/>
                            <controls:ShadcnTextBlock Text="â€¢ And more..." Margin="0,0,0,4"/>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </Border>
            
            <!-- Features -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <controls:ShadcnTextBlock Text="âœ¨ Key Features" TextSize="Heading3" Margin="0,0,0,12"/>
                    <controls:ShadcnTextBlock TextWrapping="Wrap" Margin="0,0,0,8"
                                              Text="â€¢ Modern Design: Clean, professional appearance with attention to detail"/>
                    <controls:ShadcnTextBlock TextWrapping="Wrap" Margin="0,0,0,8"
                                              Text="â€¢ Theme Support: Complete light and dark theme integration"/>
                    <controls:ShadcnTextBlock TextWrapping="Wrap" Margin="0,0,0,8"
                                              Text="â€¢ Accessibility: Built with accessibility best practices in mind"/>
                    <controls:ShadcnTextBlock TextWrapping="Wrap" Margin="0,0,0,8"
                                              Text="â€¢ Performance: Optimized for smooth animations and minimal resource usage"/>
                    <controls:ShadcnTextBlock TextWrapping="Wrap" Margin="0,0,0,8"
                                              Text="â€¢ Flexibility: Highly customizable and easy to extend"/>
                    <controls:ShadcnTextBlock TextWrapping="Wrap" Margin="0,0,0,8"
                                              Text="â€¢ Documentation: Comprehensive examples and interactive demos"/>
                </StackPanel>
            </Border>
            
            <!-- Getting Started -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <controls:ShadcnTextBlock Text="ðŸš€ Getting Started" TextSize="Heading3" Margin="0,0,0,12"/>
                    <controls:ShadcnTextBlock Text="To use Shadcn.Wpf in your project, simply reference the library and include the theme resources in your App.xaml:" 
                                              Margin="0,0,0,8" TextWrapping="Wrap"/>
                    <Border Background="{DynamicResource MutedBrush}" 
                            Padding="12" 
                            CornerRadius="6" 
                            Margin="0,8,0,8">
                        <controls:ShadcnTextBlock FontFamily="Consolas" FontSize="12" TextWrapping="Wrap"
                                                  Text="&lt;Application.Resources&gt;&#x0a;    &lt;ResourceDictionary&gt;&#x0a;        &lt;ResourceDictionary.MergedDictionaries&gt;&#x0a;            &lt;ResourceDictionary Source=&quot;/Shadcn.Wpf;component/Styles/ShadcnStyles.xaml&quot;/&gt;&#x0a;        &lt;/ResourceDictionary.MergedDictionaries&gt;&#x0a;    &lt;/ResourceDictionary&gt;&#x0a;&lt;/Application.Resources&gt;"/>
                    </Border>
                    <controls:ShadcnTextBlock Text="Then start using the components in your XAML files with the controls namespace." 
                                              Margin="0,0,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
            <!-- Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                <controls:ShadcnButton Content="View Source Code" 
                                     Variant="Primary" 
                                     Command="{Binding OpenGitHubCommand}"
                                     Margin="0,0,12,0"/>
                <controls:ShadcnButton Content="More Information" 
                                     Variant="Outline" 
                                     Command="{Binding ShowMoreInfoCommand}"
                                     Margin="0,0,12,0"/>
                <controls:ShadcnButton Content="GitHub Repository" 
                                     Variant="Secondary" 
                                     Command="{Binding OpenGitHubCommand}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
